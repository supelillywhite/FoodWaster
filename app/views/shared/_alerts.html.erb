<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :title => "FoodWaster App Alert", :sticky => false, image: :notice) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :title => "FoodWaster App Error", :sticky => false, image: :notice) %>
<% else %>
  <%= js add_gritter(flash[:notice], :title => "FoodWaster App Notification", :sticky => false, image: :notice) %>
<% end %>